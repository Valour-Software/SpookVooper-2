@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = (Model.StartsWith("Error") || Model.Contains("must be") || Model.Contains("Failed") || Model.Contains("lack") || Model.Contains("can not") || Model.Contains("not found")) ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
        @Model
    </div>
}