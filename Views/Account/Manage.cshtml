@model UserManageModel

@using SV2.Models.Manage;
@using SV2.Managers;
@{
    ViewData["Title"] = "Profile";
}

<div class="container vw-100">
    <div class="col-12">
        <h4>@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    @Html.HiddenFor(x => x.Id)
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="container" style="align-content:flex-start">
                            <div class="d-flex">
                                <div class="flex-column" style="margin-right:5px; margin-left: -15px">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                                <div class="flex-column" style="margin-right:5px">
                                    <a asp-action="Info" asp-controller="User" asp-route-svid="@Model.Id" style="white-space:nowrap" class="btn btn-primary">User Page</a>
                                </div>
                                <div class="flex-column" style="margin-right:5px">
                                    <a asp-action="ViewAPIKey" asp-controller="Account" class="btn btn-outline-warning" style="white-space:nowrap">API Key [Advanced]</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </div>
</div>